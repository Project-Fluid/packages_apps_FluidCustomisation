<PreferenceScreen
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
     android:title="@string/customisation_themes" >

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="accent_color"
            android:title="@string/rgb_accent"
            settings:defaultColorValue="0x72BBFF"
            android:persistent="false" />

        <ListPreference
            android:key="android.theme.customization.accent_color"
            android:title="@string/accent_prebuilt"
            android:summary="@string/accent_prebuilt_summary" />

    <PreferenceCategory
        android:key="theme_customization_category"
        android:title="@string/themes_ui">

        <ListPreference
            android:key="android.theme.customization.font"
            android:title="@string/theme_customization_font_title"/>

        <ListPreference
            android:key="android.theme.customization.adaptive_icon_shape"
            android:title="@string/theme_customization_icon_shape_title"/>

        <Preference
	    android:key="system_icons"
            android:title="@string/customisation_systemicons"
            android:fragment="com.fluid.customisation.fragments.SystemTheme" />

    </PreferenceCategory>

</PreferenceScreen>
